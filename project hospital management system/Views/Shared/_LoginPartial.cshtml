@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <i class="fa fa-user-circle"></i>
                @{
                    var userManager = HttpContext.Current.GetOwinContext().GetUserManager<ApplicationUserManager>();
                    var user = userManager.FindById(User.Identity.GetUserId());
                    var displayName = !string.IsNullOrEmpty(user?.FirstName) ?
                        user.FirstName + " " + user.LastName :
                        User.Identity.GetUserName();
                }
                @displayName <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a href="@Url.Action("Index", "Manage")">
                        <i class="fa fa-cog"></i> Account Settings
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ChangePassword", "Manage")">
                        <i class="fa fa-lock"></i> Change Password
                    </a>
                </li>
                <li class="divider"></li>
                <li>
                    <a href="javascript:document.getElementById('logoutForm').submit()">
                        <i class="fa fa-sign-out"></i> Log off
                    </a>
                </li>
            </ul>
        </li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="@Url.Action("Register", "Account")" id="registerLink">
                <i class="fa fa-user-plus"></i> Register
            </a>
        </li>
        <li>
            <a href="@Url.Action("Login", "Account")" id="loginLink">
                <i class="fa fa-sign-in"></i> Log in
            </a>
        </li>
    </ul>
}
