﻿@model project_hospital_management_system.Models.Invoice

@{
    ViewBag.Title = "Delete Invoice";
}

<h2>Delete Invoice</h2>

<h3>Are you sure you want to delete this invoice?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Patient.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Patient.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateIssued)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateIssued)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.TotalAmount)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TotalAmount)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Status)
        </dt>

        <dd>
            @{
                string statusClass = "";
                switch (Model.Status)
                {
                    case "Paid":
                        statusClass = "label label-success";
                        break;
                    case "Pending":
                        statusClass = "label label-warning";
                        break;
                    case "Overdue":
                        statusClass = "label label-danger";
                        break;
                }
            }
            <span class="@statusClass">@Html.DisplayFor(model => model.Status)</span>
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
